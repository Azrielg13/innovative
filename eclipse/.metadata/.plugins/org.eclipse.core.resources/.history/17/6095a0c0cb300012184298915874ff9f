package com.sce.esp.component;

import java.awt.Component;

import javax.swing.JLabel;
import javax.swing.JTable;
import javax.swing.table.DefaultTableCellRenderer;

import com.sce.esp.object.model.BlobFile;
import com.sce.esp.util.IconsFactory;

/**
 * @author Distribution Staff Engineering
 */
public class BlobFileCellRenderer extends DefaultTableCellRenderer {

	/**
	 * 
	 */
	private static final long serialVersionUID = 7790867019079219656L;

	public Component getTableCellRendererComponent(JTable table, Object value,
			boolean isSelected, boolean hasFocus, int row, int column) {
		if (value instanceof BlobFile) {
			JLabel label = (JLabel) super.getTableCellRendererComponent(table,
					((BlobFile) value).getFileName(), isSelected, hasFocus,
					row, column);
			label.setIcon(IconsFactory.getImageIcon(((BlobFile) value)
					.getFileIconType()));
			return label;
		} else {
			return super.getTableCellRendererComponent(table, value,
					isSelected, hasFocus, row, column);
		}
	}
}
