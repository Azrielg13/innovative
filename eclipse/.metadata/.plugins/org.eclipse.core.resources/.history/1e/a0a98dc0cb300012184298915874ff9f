package com.sce.esp.component;

import java.awt.Color;
import java.awt.Component;
import java.awt.Graphics;
import java.awt.event.FocusEvent;
import java.awt.event.FocusListener;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.sql.SQLException;

import javax.swing.JOptionPane;
import javax.swing.JTextArea;
import javax.swing.SwingUtilities;
import javax.swing.UIManager;

import com.sce.esp.dialog.ESPDialog;
import com.sce.esp.object.model.User;
import com.sce.esp.security.TopFlight;
import com.sce.esp.util.ui.LimitDocument;

public abstract class DynamicTextArea extends JTextArea
		implements
			MouseListener,
			FocusListener {
	/**
	 * 
	 */
	private static final long serialVersionUID = -3902551395861835164L;
	private Object obj;
	private Object setObject;
	private Object editingO;
	private int userRole;
	private Component c;
	private boolean isEditing;

	public DynamicTextArea(Component c, Object obj, int userRole, int limit) {
		this(c, obj, userRole, limit, 1);
		
	}

	public DynamicTextArea(Component c, Object obj, int userRole, int limit,
			int rows) {
		this.c = c;
		this.obj = obj;
		this.userRole = userRole;
		this.setRows(rows);
		this.setDisabledTextColor(Color.BLACK);
		setDocument(new LimitDocument(limit));
		setLineWrap(true);
		setWrapStyleWord(true);
		addFocusListener(this);
		addMouseListener(this);
	}

	public Object getObject() {
		return obj;
	}

	public Color getBackground() {
		if (!isEnabled()) {
			try {
				return (Color) UIManager.getDefaults().getColor(
						"FormattedTextField.inactiveBackground");
			} catch (Exception e) {
				e.printStackTrace();
			}
		}
		return Color.WHITE;
	}

	public void paintComponent(Graphics g) {
		Object o = getObject();
		try {
			Object value = null;
			if (o != null)
				value = getObjectValue();
			if (!isEditing
					&& (setObject != o || !hasFocus()
							&& o != null
							&& (value == null && getText().length() > 0 || value != null
									&& !getText().equals("" + value)))) {
				if (value == null)
					setText("");
				else
					setText("" + value);
				setObject = o;

				setCaretPosition(0);
			}
			if (shouldBeEnabled() != isEnabled())
				setEnabled(shouldBeEnabled());
		} catch (Exception e) {
			e.printStackTrace();
		}
		super.paintComponent(g);
	}

	public void focusGained(FocusEvent fe) {
		if (fe.getOppositeComponent() != null)
			editingO = getObject();
	}
	public void focusLost(FocusEvent fe) {
		try {
			if (setObject == editingO)
				updateObject();
		} catch (Exception e) {
			e.printStackTrace();
			ESPDialog.showMessageDialog(this, e.getMessage(), "Error",
					JOptionPane.ERROR_MESSAGE);
		}
		if (c != null)
			c.repaint();
	}

	public boolean shouldBeEnabled() throws SQLException {
		return getObject() != null && hasPermission();
	}
	public boolean hasPermission() throws SQLException {
		return TopFlight.getInstance().hasAccessRight(userRole);
	}
	public abstract Object getObjectValue() throws SQLException;

	public abstract void updateObject() throws SQLException;

	public Object getEditingObject() {
		return editingO;
	}

	public void mouseClicked(MouseEvent me) {
		try {
			if (User.getActiveUser().getUserRole().isAdmin()
					&& SwingUtilities.isRightMouseButton(me))
				editingO = getObject();
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
	public void mouseEntered(MouseEvent arg0) {
	}
	public void mouseExited(MouseEvent arg0) {
	}
	public void mousePressed(MouseEvent arg0) {
	}
	public void mouseReleased(MouseEvent arg0) {
	}

	public void setEditInProgress(boolean isEditing) {
		this.isEditing = isEditing;
	}

}