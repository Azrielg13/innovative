package com.sce.esp.object.model;

import java.io.Serializable;
import java.sql.SQLException;
import java.util.Collection;

import javax.persistence.Entity;
import javax.persistence.NamedNativeQueries;
import javax.persistence.NamedNativeQuery;
import javax.persistence.NamedQueries;
import javax.persistence.NamedQuery;
import javax.persistence.Table;

import com.sce.esp.object.dao.SubTypeDAO;
@Entity
@Table(schema="MDI",name="MDI090_SUB_TYPE")
@NamedQueries({
	@NamedQuery(name = "findByID", query="SELECT o FROM SubType o WHERE o.PLANYEAR=?1 AND o.SUB_TYPE_ID=?2"),//AUTO-GENERATED
	@NamedQuery(name = "findAll", query="SELECT o FROM SubType o"),//AUTO-GENERATED
	@NamedQuery(name = "findAllActive", query="SELECT o FROM SubType o WHERE o.DELETED_TS IS NULL"),//AUTO-GENERATED
	@NamedQuery(name = "findByDepartment", query="SELECT o FROM SubType o WHERE o.PLANYEAR=?1 AND o.DELETED_TS IS NULL"),//AUTO-GENERATED
})
@NamedNativeQueries({
	@NamedNativeQuery(name = "refresh", query="SELECT o.* FROM MDI090_SUB_TYPE o WHERE o.PLANYEAR=? AND o.SUB_TYPE_ID=?"),//AUTO-GENERATED
})
public class SubType extends SubTypeDAO implements Serializable{	
	
	private static final long serialVersionUID = 7600875772398273262L;
	public final static int A = 1;
	public final static int B = 2;
	public final static int C = 3;
	public final static int D = 4;
	public final static int F = 5;
	public final static int G = 6;
	public final static int H = 7;
	public final static int M = 8;
	public final static int P = 9;
	public final static int S = 10;
	public final static int T = 11;
	public final static int X = 12;
	
	public final static int DEFAULT_TYPE = D;
	
	/**
	 * The Constructor.
	 * 
	 * @param planyear the planyear
	 */
	public SubType(){
	}
	public SubType(int planyear) {
		super(planyear,'~');
	}
	
	/**
	 * The Constructor.
	 * 
	 * @param planyear the planyear
	 * @param subTypeId the sub type id
	 */
	public SubType(int planyear, int subTypeId){
		super(planyear,subTypeId);
	}
	
	public SubType(SubType subType) {
		super(subType);
	}

	/**
	 * BME MDI Remove isADS()
	 * 
	 * Checks if is ADS.  This method has been
	 * modified to be useful in <code>HeatStormTracker</code>.
	 * @return true, if is ADS
	 */
	public boolean isADS(){
		return (getSubTypeId()== A || getSubTypeId()== D || getSubTypeId()== S);
	}
	
	/**
	 * To string.
	 * 
	 * @return the string
	 */
	public String toString() {
		return getSubType();
	}
	
	/**
	 * Gets the all.
	 * 
	 * @param planyear the planyear
	 * 
	 * @return the all
	 * 
	 * @throws SQLException the SQL exception
	 */
	public static Collection<SubType> getAll(int planyear) throws SQLException {
		return Department.getInstance(planyear, true).getSubTypes();
	}
}
