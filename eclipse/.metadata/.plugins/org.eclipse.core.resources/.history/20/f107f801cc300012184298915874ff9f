/**Description of class, (we need to get this from somewhere, database? xml?)*/
import com.sce.esp.object.jpa.AutoInsertable;
import com.sce.esp.object.jpa.EntityManagerHelper;
import com.sce.esp.object.jpa.PrimaryKey;
import com.sce.esp.object.model.CostType;
import com.sce.esp.object.model.ScopeItem;
import com.sce.esp.object.model.ScopeItemPerUnit;
import java.util.Collection;
import java.util.Vector;
import javax.persistence.Cache;
import javax.persistence.Column;
import javax.persistence.EntityManager;
import javax.persistence.Id;
import javax.persistence.SequenceGenerator;
import javax.persistence.TypedQuery;
public abstract class ScopeItemPerUnitDAO extends DataAccessObject{
	public static enum KEY_PROPERTY{ID};
	public static enum PROPERTY{ID,SCOPE_ITEM_ID,COST_TYPE_ID,PER_UNIT_COST,CONT_FACTOR,DIFFICULTY_FACTOR};
	public final static int ID_LIMIT = 9;
	public final static int SCOPEITEMID_LIMIT = 9;
	public final static int COSTTYPEID_LIMIT = 9;
	public final static int PERUNITCOST_LIMIT = 24;
	public final static int CONTFACTOR_LIMIT = 24;
	public final static int DIFFICULTYFACTOR_LIMIT = 24;
	private int id;
	private int scopeItemId;
	private int costTypeId;
	private double perUnitCost;
	private double contFactor;
	private double difficultyFactor = 1;
	private ScopeItem scopeItem;
	private CostType costType;
	public static ScopeItemPerUnit getInstance(int id)throws java.sql.SQLException{
		return getInstance(id, true);
	}
	public static ScopeItemPerUnit getInstance(int id, boolean fetch)throws java.sql.SQLException{
		if(isNull(id))return null;
		EntityManager em = EntityManagerHelper.getEntityManager();
		PrimaryKey pk = new PrimaryKey(id);
		Cache cache = em.getEntityManagerFactory().getCache();
		ScopeItemPerUnit o = null;
		if(cache != null && cache.contains(ScopeItemPerUnit.class, pk))
			o = em.find(ScopeItemPerUnit.class, pk);
		if(o==null && getAICache().contains(ScopeItemPerUnit.class, pk))
			o = getAICache().find(ScopeItemPerUnit.class, pk);
		if(o==null && fetch)
			o = em.find(ScopeItemPerUnit.class, pk);
		if(o==null && fetch && ScopeItemPerUnit.class.getAnnotation(AutoInsertable.class) != null){
			o = new ScopeItemPerUnit(id);
			getAICache().cache(ScopeItemPerUnit.class, o);
		}
		return o;
	}
	public static Collection<ScopeItemPerUnit> getAll()throws java.sql.SQLException{
		return getNamedCollection("findAll");
	}
	public static Collection<ScopeItemPerUnit> getAllActive()throws java.sql.SQLException{
		return getNamedCollection("findAllActive");
	}
	public static Collection<ScopeItemPerUnit> getCollection(String[] props, Object... values)throws java.sql.SQLException{
		String qlString = "SELECT o FROM ScopeItemPerUnit o";
		if(props != null && props.length > 0){
			qlString += " WHERE";
			int p=0;
			for(String prop:props){
				if(p > 0)
					qlString +=" AND";
				if(values[p]==null)
					qlString += " o."+prop+" IS NULL";
				else
					qlString += " o."+prop+" = ?"+(p+1);
				p++;
			}
		}
		return getCollection(qlString,values);
	}
	public synchronized static Collection<ScopeItemPerUnit> getCollection(String jpql, Object... values)throws java.sql.SQLException{
		EntityManager em = EntityManagerHelper.getEntityManager();
		TypedQuery<ScopeItemPerUnit> tq = em.createQuery(jpql,ScopeItemPerUnit.class);
		if(values != null && values.length > 0){
			int p=1;
			for(Object value:values)
				if(value != null)
					tq = tq.setParameter(p++, value);
		}
		return tq.getResultList();
	}
	public synchronized static Collection<ScopeItemPerUnit> getNamedCollection(String name, Object... values)throws java.sql.SQLException{
		EntityManager em = EntityManagerHelper.getEntityManager();
		TypedQuery<ScopeItemPerUnit> tq = em.createNamedQuery(name,ScopeItemPerUnit.class);
		if(values != null && values.length > 0){
			int p=1;
			for(Object value:values)
				if(value != null)
					tq = tq.setParameter(p++, value);
		}
		return tq.getResultList();
	}
	public ScopeItemPerUnitDAO(){}
	public ScopeItemPerUnitDAO(int id){
		this.id=id;
	}
	public ScopeItemPerUnitDAO(ScopeItemPerUnitDAO orig){
		super(orig);
		copyFrom(orig);
	}
	public void copyFrom(ScopeItemPerUnitDAO orig){
		this.scopeItemId=orig.getScopeItemId();
		this.costTypeId=orig.getCostTypeId();
		this.perUnitCost=orig.getPerUnitCost();
		this.contFactor=orig.getContFactor();
		this.difficultyFactor=orig.getDifficultyFactor();
	}
	public String getHashKey(){
		return getHashKey(getKeyValues());
	}
	public Object[] getKeyValues(){
		return new Object[]{id};
	}
	@Override
	public int hashCode(){
		return PrimaryKey.hashCode(getKeyValues());
	}
	@Id
	@SequenceGenerator(name="MDIU50_SEQ",sequenceName="MDIU50_SEQ")
	@Column(name="ID",nullable=false,length=9)
	public int getId(){
		return id;
	}
	public void setId(int id) throws java.sql.SQLException{
		if(isSame(id, getId()))return;
		int oldValue = getId();
		this.id=id;
		setProperty("ID", id, oldValue);
	}
	@Column(name="SCOPE_ITEM_ID",nullable=false,length=9)
	public int getScopeItemId(){
		return scopeItemId;
	}
	public void setScopeItemId(int scopeItemId) throws java.sql.SQLException{
		if(isSame(scopeItemId, getScopeItemId()))return;
		int oldValue = getScopeItemId();
		this.scopeItemId=scopeItemId;
		setProperty("SCOPE_ITEM_ID", scopeItemId, oldValue);
		scopeItem=null;
	}
	@Column(name="COST_TYPE_ID",nullable=false,length=9)
	public int getCostTypeId(){
		return costTypeId;
	}
	public void setCostTypeId(int costTypeId) throws java.sql.SQLException{
		if(isSame(costTypeId, getCostTypeId()))return;
		int oldValue = getCostTypeId();
		this.costTypeId=costTypeId;
		setProperty("COST_TYPE_ID", costTypeId, oldValue);
		costType=null;
	}
	@Column(name="PER_UNIT_COST",nullable=true,length=24)
	public double getPerUnitCost(){
		return perUnitCost;
	}
	public void setPerUnitCost(double perUnitCost) throws java.sql.SQLException{
		if(isSame(perUnitCost, getPerUnitCost()))return;
		double oldValue = getPerUnitCost();
		this.perUnitCost=perUnitCost;
		setProperty("PER_UNIT_COST", perUnitCost, oldValue);
	}
	@Column(name="CONT_FACTOR",nullable=true,length=24)
	public double getContFactor(){
		return contFactor;
	}
	public void setContFactor(double contFactor) throws java.sql.SQLException{
		if(isSame(contFactor, getContFactor()))return;
		double oldValue = getContFactor();
		this.contFactor=contFactor;
		setProperty("CONT_FACTOR", contFactor, oldValue);
	}
	@Column(name="DIFFICULTY_FACTOR",nullable=true,length=24)
	public double getDifficultyFactor(){
		return difficultyFactor;
	}
	public void setDifficultyFactor(double difficultyFactor) throws java.sql.SQLException{
		if(isSame(difficultyFactor, getDifficultyFactor()))return;
		double oldValue = getDifficultyFactor();
		this.difficultyFactor=difficultyFactor;
		setProperty("DIFFICULTY_FACTOR", difficultyFactor, oldValue);
	}
	public ScopeItem getScopeItem()throws java.sql.SQLException{
		if(scopeItem==null)
			scopeItem=ScopeItem.getInstance(getScopeItemId());
		return scopeItem;
	}
	public void setScopeItem(ScopeItem scopeItem)throws java.sql.SQLException{
		setScopeItemId(scopeItem==null?0:scopeItem.getScopeItemId());
		this.scopeItem=scopeItem;
	}
	public CostType getCostType()throws java.sql.SQLException{
		if(costType==null)
			costType=CostType.getInstance(getCostTypeId());
		return costType;
	}
	public void setCostType(CostType costType)throws java.sql.SQLException{
		setCostTypeId(costType==null?0:costType.getId());
		this.costType=costType;
	}
	public ScopeItemPerUnit copy()throws java.sql.SQLException{
		ScopeItemPerUnit cp = new ScopeItemPerUnit((ScopeItemPerUnit)this);
		copyChildrenTo(cp);
		return cp;
	}
	public void copyChildrenTo(ScopeItemPerUnitDAO cp)throws java.sql.SQLException{
		super.copyChildrenTo(cp);
	}
	public Vector<String> getDifference(ScopeItemPerUnitDAO o){
		Vector<String> diffs = super.getDifference(o);
		if(!isSame(getId(),o.getId())) diffs.add("ID");
		if(!isSame(getScopeItemId(),o.getScopeItemId())) diffs.add("SCOPE_ITEM_ID");
		if(!isSame(getCostTypeId(),o.getCostTypeId())) diffs.add("COST_TYPE_ID");
		if(!isSame(getPerUnitCost(),o.getPerUnitCost())) diffs.add("PER_UNIT_COST");
		if(!isSame(getContFactor(),o.getContFactor())) diffs.add("CONT_FACTOR");
		if(!isSame(getDifficultyFactor(),o.getDifficultyFactor())) diffs.add("DIFFICULTY_FACTOR");
		return diffs;
	}
	public void insertParents()throws java.sql.SQLException{
		if(scopeItem != null && scopeItem.isNewInstance())
				scopeItem.insert();
		if(costType != null && costType.isNewInstance())
				costType.insert();
	}
	public void insertChildren()throws java.sql.SQLException{
	}
}
