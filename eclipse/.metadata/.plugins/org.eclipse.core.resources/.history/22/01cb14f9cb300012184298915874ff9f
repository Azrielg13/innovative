package com.sce.esp.object.model;

import java.sql.SQLException;


/**
 * This interface imposes guidelines for LoadServingEntities in which are capable of producing a 
 * monthly peak bases on the peak value of a defined set of daily peaks.
 * 
 * @author Distribution Staff Engineering
 * @version 2.0
 */
public interface AbstractMonthlyPeak {
	
	/**
	 * Gets the peak value.
	 * @return the aggregate peak value in MVA
	 * @throws SQLException the SQL exception
	 */
	public double getPeakValue()throws SQLException;
	
	public int getMonth();
}
