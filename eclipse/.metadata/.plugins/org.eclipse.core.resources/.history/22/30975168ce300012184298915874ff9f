package com.sce.esp.security;

import com.sce.esp.log.EspLogger;


public class ESPListener implements LoginListener {
	
	private JXLoginPane loginPanel;

	public ESPListener(JXLoginPane loginPanel){
		this.loginPanel=loginPanel;
	}
	
	public void loginCanceled(LoginEvent source) {
		loginPanel.setMessage("Login Cancelled By User");
	}
	public void loginFailed(LoginEvent source) {
		switch(loginPanel.getLoginService().getErrorCode()){
		case 2: loginPanel.setErrorMessage("Account Temporarily Disabled, please contact a TIG Admin."); break;
		case 3:loginPanel.setErrorMessage("Account Not Created");break;
		case 4: loginPanel.setErrorMessage("Insufficient Privileges, ISSM required for access");break;
		case 28000: loginPanel.setErrorMessage("Account Locked");break;
		default: loginPanel.setErrorMessage("Login Failed, invalid username or password.");
		}
		loginPanel.setPassword(null);
		loginPanel.setPasswordStore(null);
		loginPanel.getPassField().requestFocus();
	}
	public void loginStarted(LoginEvent source) {
	}

	public void loginSucceeded(LoginEvent source) {
		EspLogger.debug(this, "Success");
	}
}
