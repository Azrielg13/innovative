package com.sce.esp.hst;

import java.sql.SQLException;
import java.util.Calendar;

import com.sce.esp.object.model.Ckt;
import com.sce.esp.object.model.CktDaily;

/**
 * 
 * @author Distribution Staff Engineering
 */
public class RealTimeCkt extends RealTimeObject {

	/**
	 * 
	 * @param ckt the <code>Ckt</code>
	 * @param date the date
	 */	
	public RealTimeCkt(Ckt ckt){
		super(ckt);
	}

	public CktDaily getDailyPeak() throws SQLException{	
		return getCkt().getDailyPeak(Calendar.getInstance());
	}
	
	/**
	 * @return the real-time values percent utilization
	 * to PLL
	 * @throws SQLException
	 */	
	public double getRtA4Utilization(boolean forceRefresh)throws SQLException{
		this.getRtNTime(forceRefresh);
		return getCkt().getGndTrip()*getCkt().getMVAFactor()!=0?getRtN(forceRefresh)/(getCkt().getGndTrip()*getCkt().getMVAFactor())*100:getRtN(forceRefresh)>0?999:0;		
	}

	/**
	 * Returns the ckt object
	 * @return The <code>Ckt</code>
	 */
	public Ckt getCkt(){
		return (Ckt)getAe();
	}
}