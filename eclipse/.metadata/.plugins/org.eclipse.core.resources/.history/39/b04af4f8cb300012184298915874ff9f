package com.sce.esp.object.model;

import java.io.Serializable;

import javax.persistence.Entity;
import javax.persistence.NamedNativeQueries;
import javax.persistence.NamedNativeQuery;
import javax.persistence.NamedQueries;
import javax.persistence.NamedQuery;
import javax.persistence.Table;

import com.sce.esp.object.dao.SubFileDAO;
@Entity
@Table(schema="MDI",name="MDI160_SUB_FILE")
@NamedQueries({
	@NamedQuery(name = "findByID", query="SELECT o FROM SubFile o WHERE o.PLANYEAR=?1 AND o.FILE_ID=?2"),//AUTO-GENERATED
	@NamedQuery(name = "findAll", query="SELECT o FROM SubFile o"),//AUTO-GENERATED
	@NamedQuery(name = "findAllActive", query="SELECT o FROM SubFile o WHERE o.DELETED_TS IS NULL"),//AUTO-GENERATED
	@NamedQuery(name = "findBySub", query="SELECT o FROM SubFile o WHERE o.PLANYEAR=?1 AND o.SUB_ID=?2 AND o.DELETED_TS IS NULL"),//AUTO-GENERATED
})
@NamedNativeQueries({
	@NamedNativeQuery(name = "refresh", query="SELECT o.* FROM MDI160_SUB_FILE o WHERE o.PLANYEAR=? AND o.FILE_ID=?"),//AUTO-GENERATED
})
public class SubFile extends SubFileDAO implements Serializable{

	private static final long serialVersionUID = 7251466298882836970L;

	/**
	 * The Constructor.
	 *
	 * @param fileId the file id
	 * @param planyear the planyear
	 */
	public SubFile(){
	}
	public SubFile(int planyear, int fileId){
		super(planyear,fileId);
	}
	
	/**
	 * The Constructor.
	 *
	 * @param planyear the planyear
	 */
	public SubFile(int planyear){
		super(planyear,0);
	}
	
	public SubFile(SubFile subFile) {
		super(subFile);
	}

	public boolean isEditable(){
		return getPlanyear() == Department.getActivePlanYear();
	}
}
