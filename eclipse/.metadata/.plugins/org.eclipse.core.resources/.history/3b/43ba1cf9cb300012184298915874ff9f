public interface ProjectItem {
	
	public SceProjRev getSceProjRev() throws SQLException;

	public Collection<SceProjElemCost> getSceProjElemCosts(CostStage.Type type) throws SQLException;
		/*switch(getType()){
			case SCEPROJ: return ((SceProj)name).getCurRev(SceProjRev.APPROVED).getSceProjElemCosts(CostStage.Type.Proposed);
