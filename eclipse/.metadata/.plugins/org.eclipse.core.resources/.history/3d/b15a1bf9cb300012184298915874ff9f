package com.sce.esp.object.model;

import java.io.Serializable;
import java.sql.SQLException;

import javax.persistence.Entity;
import javax.persistence.NamedNativeQueries;
import javax.persistence.NamedNativeQuery;
import javax.persistence.NamedQueries;
import javax.persistence.NamedQuery;
import javax.persistence.Table;

import com.sce.esp.object.dao.PifWoImpactDAO;
@Entity
@Table(schema="MDI",name="MDI666_PIF_WO_IMPACT")
@NamedQueries({
	@NamedQuery(name = "findByID", query="SELECT o FROM PifWoImpact o WHERE o.PLANYEAR=?1 AND o.WO_ID=?2 AND o.PIF_IMPACT_TYPE_ID=?3"),//AUTO-GENERATED
	@NamedQuery(name = "findAll", query="SELECT o FROM PifWoImpact o"),//AUTO-GENERATED
	@NamedQuery(name = "findAllActive", query="SELECT o FROM PifWoImpact o WHERE o.DELETED_TS IS NULL"),//AUTO-GENERATED
	@NamedQuery(name = "findByPifWo", query="SELECT o FROM PifWoImpact o WHERE o.PLANYEAR=?1 AND o.WO_ID=?2 AND o.DELETED_TS IS NULL"),//AUTO-GENERATED
})
@NamedNativeQueries({
	@NamedNativeQuery(name = "refresh", query="SELECT o.* FROM MDI666_PIF_WO_IMPACT o WHERE o.PLANYEAR=? AND o.WO_ID=? AND o.PIF_IMPACT_TYPE_ID=?"),//AUTO-GENERATED
})
public class PifWoImpact extends PifWoImpactDAO implements Serializable{
	
	private static final long serialVersionUID = 3676811114561926637L;
	public final static String HIGH_IMPACT = "High Impact";
	public final static String LOW_IMPACT = "Low Impact";
	public final static String MODERATE_IMPACT = "Moderate Impact";
	public final static String NO_IMPACT = "No Impact";
	
	public PifWoImpact(){
	}
	public PifWoImpact(int planyear, int woId, int pifImpactTypeId) {
		super(planyear, woId, pifImpactTypeId);
	}
	public PifWoImpact(PifWoImpact pifWoImpact) {
	super(pifWoImpact);
	}
	public static int getTotalScore(int planYear, PifWo wo){
		int total = 0;
		try {
			if(PifWoImpact.getInstance(planYear,wo.getWoId(),PifImpactType.GOODWORK)!=null)
				total+=PifWoImpact.getInstance(planYear,wo.getWoId(),PifImpactType.GOODWORK).getPifImpactValue().getValue();
			if(PifWoImpact.getInstance(planYear,wo.getWoId(),PifImpactType.RELIABILITY)!=null)
				total+=PifWoImpact.getInstance(planYear,wo.getWoId(),PifImpactType.RELIABILITY).getPifImpactValue().getValue();
			if(PifWoImpact.getInstance(planYear,wo.getWoId(),PifImpactType.MAINTAINABILITY)!=null)
				total+=PifWoImpact.getInstance(planYear,wo.getWoId(),PifImpactType.MAINTAINABILITY).getPifImpactValue().getValue();
			if(PifWoImpact.getInstance(planYear,wo.getWoId(),PifImpactType.SAFETY)!=null)
				total+=PifWoImpact.getInstance(planYear,wo.getWoId(),PifImpactType.SAFETY).getPifImpactValue().getValue();
			if(PifWoImpact.getInstance(planYear,wo.getWoId(),PifImpactType.COMMUNITY)!=null)
				total+=PifWoImpact.getInstance(planYear,wo.getWoId(),PifImpactType.COMMUNITY).getPifImpactValue().getValue();
				
		} catch (SQLException e) {
			e.printStackTrace();
		}
		return total;
	}
}
