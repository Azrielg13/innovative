package com.sce.esp.object.model;

import java.io.Serializable;

import javax.persistence.Entity;
import javax.persistence.NamedNativeQueries;
import javax.persistence.NamedNativeQuery;
import javax.persistence.NamedQueries;
import javax.persistence.NamedQuery;
import javax.persistence.Table;

import com.sce.esp.object.dao.PqCustomerSegmentDAO;
@Entity
@Table(schema="MDI",name="MDI940_PQ_CUSTOMER_SEGMENT")
@NamedQueries({
	@NamedQuery(name = "findByID", query="SELECT o FROM PqCustomerSegment o WHERE o.SEGMENT_ID=?1"),//AUTO-GENERATED
	@NamedQuery(name = "findAll", query="SELECT o FROM PqCustomerSegment o"),//AUTO-GENERATED
	@NamedQuery(name = "findAllActive", query="SELECT o FROM PqCustomerSegment o WHERE o.DELETED_TS IS NULL"),//AUTO-GENERATED
})
@NamedNativeQueries({
	@NamedNativeQuery(name = "refresh", query="SELECT o.* FROM MDI940_PQ_CUSTOMER_SEGMENT o WHERE o.SEGMENT_ID=?"),//AUTO-GENERATED
})
public class PqCustomerSegment extends PqCustomerSegmentDAO implements Serializable{

	private static final long serialVersionUID = -4610742276365394753L;
	
	/**
	 * The Constructor.
	 */
	public PqCustomerSegment() {
		super(0);
	}

	/**
	 * The Constructor.
	 * 
	 * @param id the id
	 */
	public PqCustomerSegment(int segmentId){
		super(segmentId);
	}

	public PqCustomerSegment(PqCustomerSegment pqCustomerSegment) {
		super(pqCustomerSegment);
	}

	/**
	 * String representation for combo boxes.
	 * 
	 * @return the string
	 */
	public String toString(){
		if(getType()==null && getDescription()==null)
			return "";
		return getType()+" | "+getDescription();
	}
	public int getPlanyear(){
    	return Department.getActivePlanYear();
    }
}
