package com.sce.esp.component;

import java.awt.Color;

import javax.swing.BorderFactory;
import javax.swing.border.Border;
import javax.swing.border.CompoundBorder;
import javax.swing.border.EtchedBorder;
import javax.swing.border.TitledBorder;

import com.jidesoft.swing.JideTitledBorder;
import com.jidesoft.swing.PartialEtchedBorder;
import com.jidesoft.swing.PartialLineBorder;

public class ESPBorder {

	/**
	 * 
	 * @param title
	 *            of the border
	 * @return <code>Border</code>.
	 */
	public static Border createSeparatorBorder(String title) {
		return BorderFactory.createCompoundBorder(new JideTitledBorder(
				new PartialEtchedBorder(EtchedBorder.LOWERED,
						PartialEtchedBorder.NORTH), title, TitledBorder.LEFT,
				TitledBorder.CENTER), BorderFactory.createEmptyBorder(0, 6, 4,
				6));
	}

	/**
	 * 
	 * @return PartialEtchedBorder
	 */
	public static Border createSeparatorBorderAtBottom() {
		return new PartialEtchedBorder(EtchedBorder.LOWERED,
				PartialEtchedBorder.SOUTH);
	}

	public static CompoundBorder createRoundCornerBorder(String title) {
		return BorderFactory.createCompoundBorder(BorderFactory
				.createTitledBorder(new PartialLineBorder(Color.gray, 1, true),
						title), BorderFactory.createEmptyBorder(0, 6, 4, 6));
	}

}
