package com.sce.esp.object.model;

import java.sql.SQLException;


/**
 * The GISObject facilitates guidelines for any object that has a physical location which 
 * can be specified by a latitude and longitude.
 * 
 * @author Distribution Staff Engineering
 * @version 2.0
 */
public interface GISObject {
	
	/**
	 * Gets the latitude.
	 * 
	 * @return the latitude
	 * 
	 * @throws SQLException the SQL exception
	 */
	public double getLatitude()throws Exception;
	
	/**
	 * Gets the longitude.
	 * 
	 * @return the longitude
	 * 
	 * @throws SQLException the SQL exception
	 */
	public double getLongitude()throws Exception;
}
