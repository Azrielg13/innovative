package com.sce.esp.component;

import java.awt.Color;
import java.awt.GradientPaint;
import java.awt.Graphics;
import java.awt.Graphics2D;

import javax.swing.JPanel;

/**
 * The Class SimPanel.
 * 
 * @author Distribution Staff Engineering
 */
public abstract class ColorPanel extends JPanel {

	/**
	 * 
	 */
	private static final long serialVersionUID = -4779159942564021405L;

	public void paintComponent(Graphics g) {
		if (getColor() != null) {
			Graphics2D g2 = (Graphics2D) g;
			int w = getWidth();
			int h = getHeight();
			// try {

			// Color c = Simulation.DEFAULT_COLOR;
			// if(Simulation.getInstance(planyear, simId)!=null &&
			// Simulation.getInstance(planyear, simId).getColor()!=null )
			// c = Simulation.getInstance(planyear, simId).getColor();

			GradientPaint gradient = new GradientPaint(20, 0, getColor(), 20,
					h, getColor().brighter().brighter(), false);
			g2.setPaint(gradient);
			g2.fillRect(0, 0, w, h);

			// } catch (SQLException e) {
			// e.printStackTrace();
			// }
		} else {
			super.paintComponent(g);
		}
	}

	public abstract Color getColor();

}