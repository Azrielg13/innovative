package com.sce.esp.object.model;


import org.junit.Test;

import com.sce.esp.log.EspLogger;
import com.sce.esp.object.ESPTestCase;

public class DescriptiveOptionTest extends ESPTestCase {

	@Test
	public void test() throws Exception {
		DescriptiveType dt = new DescriptiveType();
		DescriptiveOption option = new DescriptiveOption("height","The height of the item",1); 
		dt.addDescriptiveOption(option);
		EspLogger.message(this, dt.getOptions());
		dt.addDescriptiveOption(new DescriptiveOption("width","The width of the item",0));
		assertEquals(2, dt.getDescriptiveOptions().size());
		EspLogger.message(this, dt.getOptions());
		dt.removeDescriptiveOption(option);
		EspLogger.message(this, dt.getOptions());
	}

}
