package com.sce.esp.object.model;

import java.sql.SQLException;
import java.util.Calendar;

import org.junit.Test;

import com.sce.esp.object.ESPTestCase;

public class ScheduleTest extends ESPTestCase {
	
	@Test
	public void testMSTemplate() throws SQLException{
		
		
		SceProjRev selectedRev = SceProjRev.getInstance(56485);
		
		for(ScheduleTracking st: ScheduleTracking.getDefaultScheduleTemplates()){
			Calendar G0 = st.getGateDate(0,selectedRev);
			Calendar modelStart = st.getModelStart(selectedRev);
			assertEquals(-1, G0.compareTo(modelStart));
		}
	}
	
