package com.sce.esp.object.model;

import java.io.Serializable;

import javax.persistence.Entity;
import javax.persistence.NamedNativeQueries;
import javax.persistence.NamedNativeQuery;
import javax.persistence.NamedQueries;
import javax.persistence.NamedQuery;
import javax.persistence.Table;

import com.sce.esp.object.dao.PqReasonTypeDAO;
@Entity
@Table(schema="MDI",name="MDI970_PQ_REASON_TYPE")
@NamedQueries({
	@NamedQuery(name = "findByID", query="SELECT o FROM PqReasonType o WHERE o.REASON_ID=?1"),//AUTO-GENERATED
	@NamedQuery(name = "findAll", query="SELECT o FROM PqReasonType o"),//AUTO-GENERATED
	@NamedQuery(name = "findAllActive", query="SELECT o FROM PqReasonType o WHERE o.DELETED_TS IS NULL"),//AUTO-GENERATED
})
@NamedNativeQueries({
	@NamedNativeQuery(name = "refresh", query="SELECT o.* FROM MDI970_PQ_REASON_TYPE o WHERE o.REASON_ID=?"),//AUTO-GENERATED
})
public class PqReasonType extends PqReasonTypeDAO implements Serializable{

	private static final long serialVersionUID = -7290348154273981363L;
	
	/**
	 * The Constructor.
	 */
	public PqReasonType() {
		super(0);
	}
	
	/**
	 * The Constructor.
	 * 
	 * @param id the id
	 */
	public PqReasonType(int reasonId){
		super(reasonId);
	}
	
	public PqReasonType(PqReasonType pqReasonType) {
		super(pqReasonType);
	}
    
	/**
	 * String representation for combo boxes.
	 * 
	 * @return the string
	 */
	public String toString(){
		return getReasonType();
	}
	public int getPlanyear(){
    	return Department.getActivePlanYear();
    }
}
