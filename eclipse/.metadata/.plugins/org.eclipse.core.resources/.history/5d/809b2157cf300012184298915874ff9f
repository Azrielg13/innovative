package com.sce.esp.object.model;

import java.sql.SQLException;
import java.util.Calendar;
import java.util.Vector;

import com.sce.esp.log.EspLogger;
import com.sce.esp.object.ESPTestCase;


public class BankTest extends ESPTestCase{
	public void testGetInstance() throws SQLException{
		Bank bank = Bank.getInstance(2011, 0, 1138);
		assertNotNull(bank);
		bank = Bank.getInstance(2011, 0, 1137);
		assertNotNull(bank);
		bank = Bank.getInstance(2011, 0, 2029);
		assertNotNull(bank);
	}
	public void testGetNameplate() throws SQLException{
		Vector<ScopeItem> mostRecent = new Vector<ScopeItem>();
		Bank bank = Bank.getInstance(2011, 0, 1138);
		//assertEquals(44.8,bank.getNameplate(Calendar.getInstance()));
		mostRecent.add(bank.getMostRecentScopeItem(Calendar.getInstance()));
		bank = Bank.getInstance(2011, 0, 1137);
		//assertEquals(56.0,bank.getNameplate(Calendar.getInstance()));
		mostRecent.add(bank.getMostRecentScopeItem(Calendar.getInstance()));
		bank = Bank.getInstance(2011, 0, 2029);
		//assertEquals(28.0,bank.getNameplate(Calendar.getInstance()));
		mostRecent.add(bank.getMostRecentScopeItem(Calendar.getInstance()));
		System.out.flush();
		for(ScopeItem si:mostRecent)
			EspLogger.message(this, "ScopeItem id:"+si.getScopeItemId());
	}
}
