    private void okButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_okButtonActionPerformed
        if (nameTextField.getText().trim().length() == 0) {
            JOptionPane.showMessageDialog(this, "Please supply an anchor name.", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }
        StringBuffer buffer = new StringBuffer();
        buffer.append("<a name='");
        buffer.append(nameTextField.getText());
        buffer.append("'>TODO: modify anchor contents</a>");
        anchorHtml = buffer.toString();
        setVisible(false);
}//GEN-LAST:event_okButtonActionPerformed

    public String showDialog() {
        setVisible(true);
        return anchorHtml;
    }

