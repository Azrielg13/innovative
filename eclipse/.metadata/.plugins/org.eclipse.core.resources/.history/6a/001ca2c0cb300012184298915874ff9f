package com.sce.esp.component;

import javax.swing.Icon;
import javax.swing.SwingConstants;

import com.jidesoft.swing.JideButton;

public class ESPButton extends JideButton {
	/**
	 * 
	 */
	private static final long serialVersionUID = -3098316652988960096L;
	public ESPButton(String text) {
		this(text, null);
	}
	public ESPButton(Icon icon) {
		this(null, icon);
	}
	public ESPButton(String text, Icon icon) {
		super(text, icon);
		setButtonStyle(TOOLBOX_STYLE);
		setOpaque(false);
	}
	// I Created this for global usage, its current usage is the navigation
	// frame. FTT
	public static JideButton createJideButton(String name, Icon icon,
			Icon rolloverIcon, String actionCommand) {
		JideButton button = new ESPButton(name, icon);
		button.setToolTipText(name);
		button.setRolloverIcon(rolloverIcon);
		button.setActionCommand(actionCommand);
		button.setHorizontalAlignment(SwingConstants.LEFT);
		button.setRequestFocusEnabled(false);
		button.setFocusable(false);
		return button;
	}
	public String toString() {
		return TotalRow.BLANKSTRING;
	}
}
