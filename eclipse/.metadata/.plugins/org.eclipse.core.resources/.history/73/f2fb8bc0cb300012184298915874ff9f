	/** Creates new form UrlLinkPanel */
    public UrlLinkPanel() {
        initComponents();

        linkTargetComboBox.removeAllItems();
        LinkTarget[] linkTargets = LinkTarget.values();
        for (int i=0; i<linkTargets.length; i++) {
            linkTargetComboBox.addItem(linkTargets[i]);
        }
    }

