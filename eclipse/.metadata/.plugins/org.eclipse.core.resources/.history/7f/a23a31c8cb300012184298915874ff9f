package com.sce.esp.dialog;

import java.awt.Dialog;
import java.awt.Frame;
import java.awt.GraphicsConfiguration;

import javax.swing.JDialog;

/**
 * <p>Title: SmartDialog</p>
 * <p>Description: Class that creates a centered Dialog.</p>
 * <p>Copyright: Copyright (c) 2004</p>
 *
 * @author Tom Comer
 * @version 1.0
 */
public class SmartDialog extends JDialog {
    /**
	 * 
	 */
	private static final long serialVersionUID = -4219837727509630968L;

	public SmartDialog() {
        super();
    }

    public SmartDialog(Dialog owner) {
        super(owner);
    }

    public SmartDialog(Dialog owner, boolean modal) {
        super(owner, modal);
    }

    public SmartDialog(Dialog owner, String title) {
        super(owner, title);
    }

    public SmartDialog(Dialog owner, String title, boolean modal) {
        super(owner, title, modal);
    }

    public SmartDialog(Dialog owner, String title, boolean modal, GraphicsConfiguration gc) {
        super(owner, title, modal, gc);
    }

    public SmartDialog(Frame owner) {
        super(owner);
    }

    public SmartDialog(Frame owner, boolean modal) {
        super(owner, modal);
    }

    public SmartDialog(Frame owner, String title) {
        super(owner, title);
    }

    public SmartDialog(Frame owner, String title, boolean modal) {
        super(owner, title, modal);
    }

    public SmartDialog(Frame owner, String title, boolean modal, GraphicsConfiguration gc) {
        super(owner, title, modal, gc);
    }

    public void setVisible(boolean isVisible) {
        setLocationRelativeTo(getParent());
        super.setVisible(isVisible);
    }
}

