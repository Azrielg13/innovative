package com.sce.esp.object.model;

import java.io.Serializable;
import java.sql.SQLException;

import javax.persistence.Entity;
import javax.persistence.NamedNativeQueries;
import javax.persistence.NamedNativeQuery;
import javax.persistence.NamedQueries;
import javax.persistence.NamedQuery;
import javax.persistence.Table;

import com.sce.esp.object.dao.CktTransN1DAO;
@Entity
@Table(schema="MDI",name="MDI265_CKT_TRANS_N1")
@NamedQueries({
	@NamedQuery(name = "findByID", query="SELECT o FROM CktTransN1 o WHERE o.PLANYEAR=?1 AND o.TRANS_N1_ID=?2"),//AUTO-GENERATED
	@NamedQuery(name = "findAll", query="SELECT o FROM CktTransN1 o"),//AUTO-GENERATED
	@NamedQuery(name = "findAllActive", query="SELECT o FROM CktTransN1 o WHERE o.DELETED_TS IS NULL"),//AUTO-GENERATED
	@NamedQuery(name = "findByBbankTransN1", query="SELECT o FROM CktTransN1 o WHERE o.PLANYEAR=?1 AND o.BBANK_SUB_ID=?2 AND o.TIE_ID=?3 AND o.YEAR=?4 AND o.DELETED_TS IS NULL"),//AUTO-GENERATED
})
@NamedNativeQueries({
	@NamedNativeQuery(name = "refresh", query="SELECT o.* FROM MDI265_CKT_TRANS_N1 o WHERE o.PLANYEAR=? AND o.TRANS_N1_ID=?"),//AUTO-GENERATED
})
public class CktTransN1 extends CktTransN1DAO implements Serializable{
	
	/**
	 * 
	 */
	private static final long serialVersionUID = 5109162184043301228L;

	/**
	 * The Constructor.
	 * 
	 * @param planyear the planyear
	 */
	public CktTransN1(){
	}
	public CktTransN1(int planyear) {
		super(planyear,0);
	}
	
	/**
	 * The Constructor.
	 * 
	 * @param transId the trans id
	 * @param planyear the planyear
	 */
	public CktTransN1(int planyear, int transId){
		super(planyear,transId);
	}

	public CktTransN1(CktTransN1 cktTransN1) {
		super(cktTransN1);
	}

	public Ckt getFromCkt() throws SQLException {
		return getCkt();
	}
	
	public Ckt getToCkt() throws SQLException {
		return getCkt2();
	}
	
	public double getCalculatedXfer(){
		double g=0;
		
		
		
		
		return g;
	}
	
	public double getTotalXfers() throws SQLException{
		double g=0;
		for(BbankTransN1 bbtn : getCkt().getBbank(0).getBbankTransN1s()){
			for(CktTransN1 ct : bbtn.getCktTransN1s()){
				if(ct.getFromCkt().equals(getFromCkt())){
					g+=ct.getTransfer();
				}
			}
		}
		return g;
	}
}

