package com.sce.esp.object.model;

import java.io.Serializable;

import javax.persistence.Entity;
import javax.persistence.NamedNativeQueries;
import javax.persistence.NamedNativeQuery;
import javax.persistence.NamedQueries;
import javax.persistence.NamedQuery;
import javax.persistence.Table;

import com.sce.esp.object.dao.MajorMtlDAO;
@Entity
@Table(schema="MDI",name="MDIS29_MAJOR_MTL")
@NamedQueries({
	@NamedQuery(name = "findByID", query="SELECT o FROM MajorMtl o WHERE o.MAJOR_MTL_ID=?1"),//AUTO-GENERATED
	@NamedQuery(name = "findAll", query="SELECT o FROM MajorMtl o"),//AUTO-GENERATED
	@NamedQuery(name = "findAllActive", query="SELECT o FROM MajorMtl o WHERE o.DELETED_TS IS NULL"),//AUTO-GENERATED
})
@NamedNativeQueries({
	@NamedNativeQuery(name = "refresh", query="SELECT o.* FROM MDIS29_MAJOR_MTL o WHERE o.MAJOR_MTL_ID=?"),//AUTO-GENERATED
})
public class MajorMtl extends MajorMtlDAO implements Serializable{
	
	private static final long serialVersionUID = -5278356245828846867L;
	public static final int BLANKET_PO = 1;
	public static final int NEW_PO = 2;
	public static final int BID = 3;
	
	public static final String[] TYPES = {"", "Blanket PO", "New PO", "BID"};
	
	public MajorMtl() {
		super(0);
	}
	
	public MajorMtl(int majorMtlId) {
		super(majorMtlId);
	}

	public MajorMtl(MajorMtl majorMtl) {
		super(majorMtl);
	}

	public String toString() {
		return getName();
	}

	public static int getTypeFromString(String type) {
		if(type.equals(TYPES[1])) return BLANKET_PO;
		if(type.equals(TYPES[2])) return NEW_PO;
		if(type.equals(TYPES[3])) return BID;
		return 0;
	}
	
	public int getLeadTimeByType(int type) {
		if(type==BLANKET_PO) return this.getBlanketLeadTime();
		if(type==NEW_PO) return this.getNewPoLeadTime();
		if(type==BID) return this.getBidLeadTime();		
		return 0;
	}
}
