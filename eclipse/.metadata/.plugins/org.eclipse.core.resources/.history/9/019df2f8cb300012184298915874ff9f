package com.sce.esp.object.model;

import java.io.Serializable;
import java.sql.SQLException;

import javax.persistence.Entity;
import javax.persistence.NamedNativeQueries;
import javax.persistence.NamedNativeQuery;
import javax.persistence.NamedQueries;
import javax.persistence.NamedQuery;
import javax.persistence.Table;

import com.sce.esp.object.dao.UserFileDAO;
@Entity
@Table(schema="MDI",name="MDI007_USER_FILE")
@NamedQueries({
	@NamedQuery(name = "findByID", query="SELECT o FROM UserFile o WHERE o.FILE_ID=?1"),//AUTO-GENERATED
	@NamedQuery(name = "findAll", query="SELECT o FROM UserFile o"),//AUTO-GENERATED
	@NamedQuery(name = "findAllActive", query="SELECT o FROM UserFile o WHERE o.DELETED_TS IS NULL"),//AUTO-GENERATED
	@NamedQuery(name = "findByUser", query="SELECT o FROM UserFile o WHERE o.USER_ID=?1 AND o.DELETED_TS IS NULL"),//AUTO-GENERATED
})
@NamedNativeQueries({
	@NamedNativeQuery(name = "refresh", query="SELECT o.* FROM MDI007_USER_FILE o WHERE o.FILE_ID=?"),//AUTO-GENERATED
})
public class UserFile extends UserFileDAO implements Serializable{

	private static final long serialVersionUID = -2012670394866973338L;
	public UserFile() {
		super(0);
	}
	
	public UserFile(UserFile userFile) {
		super(userFile);
	}

	public UserFile(int fileId) {
		super(fileId);
	}

	public boolean isEditable() {
		return true;
	}
	
	//TODO DB update this object, add file_desc
	public void setFileDesc(String text) throws SQLException {
		setAltVarchar1(text);
	}
	
	public String getFileDesc() {
		return getAltVarchar1();
	}
	
	//TODO DB update this object, add file_cat_id, add fk to FileCat
	public int getFileCatId(){
		return (int) getAltDouble1();
	}

	public void setFileCatId(int fileCatId)throws SQLException{
		this.setAltDouble1(fileCatId);
	}
	
	//TODO ESP remove this method after DB update
	public FileCat getFileCat()throws SQLException{
		return FileCat.getInstance(getFileCatId());
	}
	//TODO ESP remove this method after DB update
	public void setFileCat(FileCat fileCat)throws SQLException{
		if(fileCat==null)
			setFileCatId(0);
		else
			setFileCatId(fileCat.getFileCatId());
	}
}
