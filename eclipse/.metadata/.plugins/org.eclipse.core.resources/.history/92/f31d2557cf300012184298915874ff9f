package com.sce.esp.object.model;

import java.sql.SQLException;

import com.sce.esp.log.EspLogger;
import com.sce.esp.object.ESPTestCase;


public class ScopeItemTest extends ESPTestCase {
	public void testNewComputer() throws SQLException{
		ScopeItem si = new ScopeItem();
		si.setTitle("New Compter");
		si.setActionId(3);
		si.setScopeTypeId(305);//Computer Scope Type
		assertNotNull(si.getTitle());
		EspLogger.message(this, si.getTitle());
		si.addDefaultDLUs();
		assertNotSame(0,si.getScopeItems().size());
		EspLogger.message(this, si.getScopeItems().size());
	}
	public void testGetRate() throws SQLException{
		SceProjRev rev = new SceProjRev();
		SceProjElemCost spec = new SceProjElemCost();
		spec.setCostStageId(CostStage.PLAN_EST);
		ScopeItem si = new ScopeItem();
		si.setTitle("New Compter");
		si.setActionId(3);
		si.setScopeTypeId(305);//Computer Scope Type
		spec.addScopeItem(si);
		rev.addSceProjElemCost(spec);
		EspLogger.message(this, si.getTitle());
		si.addDefaultDLUs();
		assertSame(0,si.getRateSce(CostType.getInstance(1)));
		EspLogger.message(this, si.getScopeItems().size());
	}
}
