package com.sce.esp.object.model;
import java.awt.Color;
import java.io.Serializable;

import javax.persistence.Entity;
import javax.persistence.NamedNativeQueries;
import javax.persistence.NamedNativeQuery;
import javax.persistence.NamedQueries;
import javax.persistence.NamedQuery;
import javax.persistence.Table;

import com.sce.esp.object.dao.PifStatusDAO;
@Entity
@Table(schema="MDI",name="MDI645_PIF_STATUS")
@NamedQueries({
	@NamedQuery(name = "findByID", query="SELECT o FROM PifStatus o WHERE o.PLANYEAR=?1 AND o.STATUS_ID=?2"),//AUTO-GENERATED
	@NamedQuery(name = "findAll", query="SELECT o FROM PifStatus o"),//AUTO-GENERATED
	@NamedQuery(name = "findAllActive", query="SELECT o FROM PifStatus o WHERE o.DELETED_TS IS NULL"),//AUTO-GENERATED
	@NamedQuery(name = "findByDepartment", query="SELECT o FROM PifStatus o WHERE o.PLANYEAR=?1 AND o.DELETED_TS IS NULL"),//AUTO-GENERATED
})
@NamedNativeQueries({
	@NamedNativeQuery(name = "refresh", query="SELECT o.* FROM MDI645_PIF_STATUS o WHERE o.PLANYEAR=? AND o.STATUS_ID=?"),//AUTO-GENERATED
})
public class PifStatus extends PifStatusDAO implements Serializable{
	
	private static final long serialVersionUID = -1542125766058431218L;
	public static final int APPROVED = 1;
	public static final int CANCELLED = 2;
	public static final int DEFERRED = 3;
	public static final int PRELIMINARY = 4;
	public static final int COMPLETE = 5;
	public static final int APPROVED_FOR_PLANNING = 6;
	
	public PifStatus(){
	}
	public PifStatus(int planyear) {
		super(planyear,0);
	}
	/**
	 * The Constructor.
	 * 
	 * @param statusId the status id
	 * @param planyear the planyear
	 */
	public PifStatus(int planyear, int statusId){
		super(planyear,statusId);
	}
	
	public PifStatus(PifStatus pifStatus) {
		super(pifStatus);
	}
	/**
	 * Gets the color.
	 * 
	 * @return the color
	 */
	public Color getColor(){
		return new Color(getColorRgb());
	}
	public String toString(){
		return getStatus();
	}
}
