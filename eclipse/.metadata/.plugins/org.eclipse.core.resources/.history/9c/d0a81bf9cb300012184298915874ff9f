package com.sce.esp.object.model;

import java.util.Collection;
import java.util.HashMap;
import java.util.TreeSet;

public class PowerPlant {
	public static enum LABOR_TITLE{LABOR,CONTRACTOR};
	private LABOR_TITLE laborTitle=LABOR_TITLE.LABOR;
	private HashMap<String,PowerPlantGroup> col = new HashMap<String,PowerPlantGroup>();
	public PowerPlantGroup getGroup(int action,int type,CprPrime prime, CprSub sub){
		String key =action+"-"+type+"-"+prime+"."+sub;
		PowerPlantGroup ppg = col.get(key);
		if(ppg==null){
			ppg = new PowerPlantGroup(this, action, type, prime, sub);
			col.put(key,ppg);
		}
		return ppg;
	}
	public LABOR_TITLE getLaborTitle(){
		return laborTitle;
	}
	public void setLaborTitle(LABOR_TITLE laborTitle){
		this.laborTitle = laborTitle;
	}
	public Collection<PowerPlantGroup> getGroups(){
		return new TreeSet<PowerPlantGroup>(col.values());
	}
}
