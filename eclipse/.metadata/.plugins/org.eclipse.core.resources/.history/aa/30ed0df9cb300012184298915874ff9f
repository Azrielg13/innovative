package com.sce.esp.object.model;
import java.io.Serializable;
import java.sql.SQLException;

import javax.persistence.Entity;
import javax.persistence.NamedNativeQueries;
import javax.persistence.NamedNativeQuery;
import javax.persistence.NamedQueries;
import javax.persistence.NamedQuery;
import javax.persistence.Table;

import com.sce.esp.object.dao.PifSubJustDAO;
import com.sce.esp.util.Calculate;
@Entity
@Table(schema="MDI",name="MDI675_PIF_SUB_JUST")
@NamedQueries({
	@NamedQuery(name = "findByID", query="SELECT o FROM PifSubJust o WHERE o.PLANYEAR=?1 AND o.PIF_ID=?2 AND o.BBANK_SUB_ID=?3"),//AUTO-GENERATED
	@NamedQuery(name = "findAll", query="SELECT o FROM PifSubJust o"),//AUTO-GENERATED
	@NamedQuery(name = "findAllActive", query="SELECT o FROM PifSubJust o WHERE o.DELETED_TS IS NULL"),//AUTO-GENERATED
	@NamedQuery(name = "findByPif", query="SELECT o FROM PifSubJust o WHERE o.PLANYEAR=?1 AND o.PIF_ID=?2 AND o.DELETED_TS IS NULL"),//AUTO-GENERATED
})
@NamedNativeQueries({
	@NamedNativeQuery(name = "refresh", query="SELECT o.* FROM MDI675_PIF_SUB_JUST o WHERE o.PLANYEAR=? AND o.PIF_ID=? AND o.BBANK_SUB_ID=?"),//AUTO-GENERATED
})
public class PifSubJust extends PifSubJustDAO implements Serializable{
	
	private static final long serialVersionUID = -5099044988975628126L;

	/**
	 * Instantiates a new pif sub just.
	 * 
	 * @param planyear the planyear
	 * @param pifId the pif id
	 * @param bbankSubId the bbank sub id
	 */
	public PifSubJust(){
	}
	public PifSubJust(int planyear, int pifId, int bbankSubId){
		super(planyear,pifId,bbankSubId);
	}
	
	public PifSubJust(PifSubJust pifSubJust) {
		super(pifSubJust);
	}

	/**
	 * Gets the pll.
	 * 
	 * @return the pll
	 * 
	 * @throws SQLException the SQL exception
	 */
	public int getPll() throws SQLException{
		if(getBbank()!=null)
			return Calculate.displayUnits(getBbank().getYear(0, this.getPif().getOpYear()).getPLLBizLogic(),getBbank().getMVAFactor(),false).intValue();
		return 0;
	}
	
	/**
	 * Gets the before util.
	 * 
	 * @return the before util
	 * 
	 * @throws SQLException the SQL exception
	 */
	public double getBeforeUtil() throws SQLException{
		if(getPll()==0)
			return 0;
		return getBeforeLoad()/getPll();
	}
	
	/**
	 * Gets the after util.
	 * 
	 * @return the after util
	 * 
	 * @throws SQLException the SQL exception
	 */
	public double getAfterUtil() throws SQLException{
		if(getPll()==0)
			return 0;
		return getAfterLoad()/getPll();
	}

}

