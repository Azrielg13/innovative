package com.sce.esp.object.model;
import java.sql.SQLException;


/**
 * This interface imposes guidelines for objects that have an electrical connection to a 
 * surrounding substation.
 * 
 * @author Distribution Staff Engineering
 * @version 2.0
 */
public interface SubTie{
	
	/**
	 * Gets the transfer.
	 * 
	 * @param year the year
	 * @param simId the sim id
	 * 
	 * @return the transfer
	 * 
	 * @throws SQLException the SQL exception
	 */
	public SubTransfer getTransfer(int year)throws SQLException;
	
	/**
	 * Gets the from sub.
	 * 
	 * @return the from sub
	 * 
	 * @throws SQLException the SQL exception
	 */
	public Sub getFromSub()throws SQLException;
	
	/**
	 * Gets the to sub.
	 * 
	 * @return the to sub
	 * 
	 * @throws SQLException the SQL exception
	 */
	public Sub getToSub()throws SQLException;
}
