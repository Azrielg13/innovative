package com.sce.esp.object.model;


/**
 * The Class Referee.
 * 
 * @author Distribution Staff Engineering
 * @version 2.0
 */
public class Referee implements Comparable<Object>{
	
	/** The co. */
	private CoreObject co;
	
	/** The flag. */
	private Flag flag;
	
	/**
	 * The Constructor.
	 * 
	 * @param co the co
	 * @param flag the flag
	 */
	public Referee(CoreObject co, Flag flag){
		this.co = co;
		this.flag = flag;
	}
	
	/**
	 * Gets the flag.
	 * 
	 * @return the flag
	 */
	public Flag getFlag(){
		return flag;
	}
	
	/**
	 * Gets the core object.
	 * 
	 * @return the core object
	 */
	public CoreObject getCoreObject(){
		return co;
	}

	public int compareTo(Object o) {
		int ret=0;
		if(o instanceof Referee){
			Referee r = (Referee)o;
			ret = co.compareTo(r.getCoreObject());
			if(ret == 0)
				ret = flag.compareTo(r.getFlag());
		}
		return ret;
	}
}
