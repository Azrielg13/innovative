package com.sce.esp.object.model;
import java.sql.SQLException;
import java.util.ArrayList;

import javax.persistence.Entity;
import javax.persistence.NamedNativeQueries;
import javax.persistence.NamedNativeQuery;
import javax.persistence.NamedQueries;
import javax.persistence.NamedQuery;
import javax.persistence.Table;

import com.sce.esp.object.dao.SceProjBundleDAO;
@Entity
@Table(schema="MDI",name="MDIS44_SCE_PROJ_BUNDLE")
@NamedQueries({
	@NamedQuery(name = "findByID", query="SELECT o FROM SceProjBundle o WHERE o.ID=?1"),//AUTO-GENERATED
	@NamedQuery(name = "findAll", query="SELECT o FROM SceProjBundle o"),//AUTO-GENERATED
	@NamedQuery(name = "findAllActive", query="SELECT o FROM SceProjBundle o WHERE o.DELETED_TS IS NULL"),//AUTO-GENERATED
})
@NamedNativeQueries({
	@NamedNativeQuery(name = "refresh", query="SELECT o.* FROM MDIS44_SCE_PROJ_BUNDLE o WHERE o.ID=?"),//AUTO-GENERATED
})
public class SceProjBundle extends SceProjBundleDAO{
	public SceProjBundle(){
	}
	public SceProjBundle(int id){
		super(id);
	}
	public SceProjBundle(SceProjBundle orig){
		super(orig);
	}
	
	public static ArrayList<SceProj> getProjsByBundleId(int bundleId) throws SQLException {
		ArrayList<SceProj> projs = new ArrayList<SceProj>();
		for(SceProjBundle revBundle : SceProjBundle.getCollection(new String[]{"BUNDLE_ID"}, bundleId))
			projs.add(revBundle.getSceProj());
		return projs;
	}
	
	@Override
	public void insert() {
		try {
			super.insert();
			getSceProj().invalidateSceProjBundles();
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
	@Override
	public void deleteDB() {
		try {
			super.deleteDB();
			getSceProj().invalidateSceProjBundles();
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
}
