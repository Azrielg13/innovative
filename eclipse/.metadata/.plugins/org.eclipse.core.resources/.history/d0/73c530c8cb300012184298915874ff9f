package com.sce.esp.dialog;

import javax.swing.ImageIcon;

import com.jidesoft.wizard.AbstractWizardPage;

/**
 * @author Distribution Staff Engineering
 */
public abstract class ESPWizardPage extends AbstractWizardPage {
	/**
	 * 
	 */
	private static final long serialVersionUID = 8215105015483149396L;
	private String helpText="";
	
	private static String always_description = "\t\nAll blue* fields are required fields.";
	
	/**
	 * 
	 * @param title
	 * @param description
	 * @param helpText
	 * @param image
	 */
	public ESPWizardPage(String title, String description, String helpText, ImageIcon image) {
		super(title,description+always_description,image);
		this.helpText=helpText;
	}	
	public String getHelpText() {
		return helpText;
	}	
	//public abstract JComponent createWizardContent();
	//public abstract void setupWizardButtons();
}
