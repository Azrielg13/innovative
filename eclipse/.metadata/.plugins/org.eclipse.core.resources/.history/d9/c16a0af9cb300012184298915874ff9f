package com.sce.esp.object.model;

import java.sql.SQLException;
import java.util.Collection;

import javax.swing.Icon;

/**
 * 
 * The ModelingObject interface is part of the new design pattern that will be used for ScopeItems 
 * that can be modeled as a LoadSErvingEntity.
 * 
 * @author Distribution Staff Engineering
 * @version 2.0
 */

public interface ModelingObject {
	
	public int getPlanyear();
	
	public String getName()throws SQLException;
	
	public int getId();
	
	public int getCoTypeId();
	
	public CoType getCoType() throws SQLException;
	
	public Collection<ScopeItem> getScopeItems()throws SQLException;
	
	public FacilityObject getFacilityInstalledAt(int simId) throws SQLException;

	public boolean isNewInstance();
	
	public Icon getIcon();

	public void insert()throws SQLException;
}
