package com.sce.esp.util.ui;

import java.awt.BorderLayout;

import javax.swing.JFrame;
import javax.swing.JPanel;

import chrriis.dj.nativeswing.swtimpl.NativeInterface;
import chrriis.dj.nativeswing.swtimpl.components.JWebBrowser;

public class WebBrowser extends JFrame {

	private static final long serialVersionUID = 8372021633637029497L;
	private JWebBrowser webBrowser;
	
	public static boolean isNativeInitialized=false;
	
	public static void initNativeInterface(){
		try{
			NativeInterface.open();
			NativeInterface.runEventPump();
		}catch(Exception e){
			e.printStackTrace();
		}
	}
	
	public WebBrowser(String url) {
		super("ESP Suite | Browser");
		
		if(!isNativeInitialized){
			initNativeInterface();
			isNativeInitialized=true;
		}
			
		
		setSize(800, 600);
		setLocationByPlatform(true);		
		
		JPanel webBrowserPanel = new JPanel(new BorderLayout());
		
		//requires JRE u14 to run properlysee http://djproject.sourceforge.net/ns/		
		webBrowser = new JWebBrowser(JWebBrowser.destroyOnFinalization());
	
		webBrowser.setMenuBarVisible(false);
		webBrowser.navigate(url);
		webBrowserPanel.add(webBrowser, BorderLayout.CENTER);
		getContentPane().add(webBrowserPanel, BorderLayout.CENTER);
	}

	public void setURL(String url){
		webBrowser.navigate(url);
	}
	
	public JWebBrowser getWebBrowser(){
		return webBrowser;
	}

}
