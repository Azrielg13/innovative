<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<context-param>
		<param-name>company</param-name>
		<param-value>Innovative Infusion Solutions</param-value>"
	</context-param>
	<context-param>
		<param-name>website</param-name>
		<param-value>www.innovativeinfusionsolutions.com</param-value>"
	</context-param>
	<context-param>
		<param-name>dburl</param-name>
		<param-value>jdbc:mysql://localhost:3306/iis</param-value>"
	</context-param>
	<context-param>
		<param-name>dbuser</param-name>
		<param-value>webuser</param-value>
	</context-param>
	<context-param>
		<param-name>dbpass</param-name>
		<param-value>web</param-value>
	</context-param>
	<context-param>
		<param-name>emailserver</param-name>
		<param-value>mail.furniture4me.com</param-value>
	</context-param>
	<context-param>
			<param-name>emailuser</param-name>
			<param-value>furniture4me.furniture4me.com</param-value>
	</context-param>
	<context-param>
			<param-name>emailpass</param-name>
			<param-value>furniture4me347</param-value>
	</context-param>
    
	<servlet>
      <servlet-name>home</servlet-name>
      <servlet-class>com.digitald4.common.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
	
	<servlet>
      <servlet-name>login</servlet-name>
      <servlet-class>com.digitald4.common.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
	<servlet>	
      <servlet-name>logout</servlet-name>
      <servlet-class>com.digitald4.common.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
      <servlet-name>register</servlet-name>
      <servlet-class>com.digitald4.common.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping> 
	    
	<servlet>
      <servlet-name>admin</servlet-name>
      <servlet-class>com.digitald4.order.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    
	<servlet>
      <servlet-name>adminSearch</servlet-name>
      <servlet-class>com.digitald4.order.servlet.AdminSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminSearch</servlet-name>
        <url-pattern>/adminSearch</url-pattern>
    </servlet-mapping>
    
	<servlet>
      <servlet-name>upload</servlet-name>
      <servlet-class>com.digitald4.order.servlet.UploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>      
    
</web-app>
